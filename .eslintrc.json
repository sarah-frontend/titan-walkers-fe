{
  "extends": ["next/core-web-vitals"],
  "plugins": ["perfectionist", "unused-imports"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "perfectionist/sort-imports": [
      "error",
      {
        "groups": [
          "react",
          ["builtin", "external"],
          "type",
          "customType",
          "zustand",
          "internal-type",
          "internal",
          ["parent-type", "sibling-type", "index-type"],
          ["parent", "sibling", "index"],
          "side-effect",
          "style",
          "object",
          "unknown"
        ],
        "custom-groups": {
          "value": {
            "zustand": ["zustand", "@/zustand/**"],
            "react": ["react", "react-*"],
            "customType": "@/types/**"
          },
          "type": {
            "react": "react"
          }
        },
        "internal-pattern": [
          "@/components/**",
          "@/states/**",
          "@/lib/**",
          "@/util/**"
        ],
        "newlines-between": "always",
        "type": "natural",
        "order": "asc"
      }
    ]
  }
}
